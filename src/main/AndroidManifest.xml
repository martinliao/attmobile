<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.mindeos.attmobile.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.mindeos.attmobile.app.AttMobile"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.mindeos.attmobile.app.AttControlActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_sessions" >
        </activity>
        <activity
            android:name="net.mindeos.attmobile.app.TakeAttendanceActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_takeattendance" >
        </activity>
        <activity
            android:name="net.mindeos.attmobile.app.NewSessionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_new_session"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="net.mindeos.attmobile.app.EditSessionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_edit_session"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="net.mindeos.attmobile.app.ReportsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_reports"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="net.mindeos.attmobile.app.AttHomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_att_home" >
        </activity>
        <activity
            android:name="net.mindeos.attmobile.app.AttHomeReportsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_att_home_reports" >
        </activity>
        <activity
            android:name="net.mindeos.attmobile.app.SettingsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="net.mindeos.attmobile.app.AboutActivity">
        </activity>
    </application>

</manifest>
