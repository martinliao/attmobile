<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="net.mindeos.attmobile.app.AttHomeActivity$PlaceholderFragment"
    android:background="@drawable/innerbg">


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbAttHomesLoading"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:focusable="false" />

    <ListView
        android:id="@+id/lvAttHomes"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="0dip"
        android:divider="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/noatthomes"
        android:id="@+id/tvNoAttHome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible"
        android:textStyle="italic"
        android:textColor="@color/gray1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/attcontrol_title" />
</RelativeLayout>
